generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model CrawlingGS {
  id          Int       @id @default(autoincrement())
  /// 상품 바코드
  barcode     String    @unique(map: "barcode") @db.VarChar(255)
  /// 상품명
  name        String    @db.VarChar(255)
  /// 상품 가격
  price       Int
  /// 상품 이미지
  img         String    @db.VarChar(255)
  /// 이벤트 타입
  eventType   String    @db.VarChar(255)
  /// 덤증정 상품명
  giftName    String?   @db.VarChar(255)
  /// 덤증정 상품 가격
  giftPrice   Int?
  /// 덤증정 상품 이미지
  giftImg     String?   @db.Text
  /// 덤증정 상품 바코드
  giftBarcode String?   @db.VarChar(255)
  createdAt   DateTime? @default(now())
}

model CrawlingCU {
  id          Int       @id @default(autoincrement())
  /// 상품명
  name        String    @db.VarChar(255)
  /// 상품 가격
  price       Int
  /// 상품 이미지
  img         String    @db.VarChar(255)
  /// 상품 바코드
  barcode     String    @unique(map: "barcode") @db.VarChar(255)
  /// 상품 설명
  description String?   @db.Text
  /// 상품 태그
  tag         String?   @db.VarChar(255)
  createdAt   DateTime? @default(now())
  /// 이벤트 타입
  eventType   String    @db.VarChar(255)
  /// 뱃지
  badge       BadgeType @default(NONE)
}

model CrawlingSeven {
  id            Int       @id @default(autoincrement())
  /// 상품명
  name          String    @db.VarChar(255)
  /// 상품 가격
  price         Int
  /// 상품 이미지
  img           String    @db.VarChar(255)
  /// 상품 바코드
  barcode       String    @unique(map: "barcode") @db.VarChar(255)
  /// 상품명
  description   String?   @db.Text
  createdAt     DateTime? @default(now())
  /// 이벤트 타입
  eventType     String    @db.VarChar(255)
  /// 덤증정 상품 바코드
  giftBarcode   String?   @db.VarChar(255)
  /// 덤증정 상품 이미지
  giftImg       String?   @db.Text
  /// 덤증정 상품명
  giftName      String?   @db.VarChar(255)
  /// 덤증정 상품 가격
  giftPrice     Int?
  /// 상품 할인 전 가격
  originalPrice Int?
}

enum BadgeType {
  NONE
  NEW
  BEST
}
